- if @user.errors.any?
  %ul.list-unstyled
    %li.alert.alert-danger Did your Passwords match?

%div.sign

  %h2= "Create a User Account"

  = form_for @user do |f|
    %div
      =f.label :name
      =f.text_field :name, :autofocus => true
    %div
      =f.label :email
      =f.text_field :email
    %div
      =f.label :password
      =f.password_field :password
    %div
      =f.label :password_confirmation
      =f.password_field :password_confirmation, :class => 'form-control'
    =f.submit 'Sign Up'