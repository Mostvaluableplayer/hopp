%div.sign

  = link_to 'Edit Your Interests', edit_interests_path, {:class => 'button_right chat'}
  %h1= "Change Password"
  = form_for @user do |f|
    %div
      =f.label :name
      =f.text_field :name, :autofocus => true
    %div
      =f.label :email
      =f.text_field :email
    %div
      =f.label :password
      =f.password_field :password
    %div
      =f.label :password_confirmation
      =f.password_field :password_confirmation
    =f.submit 'Submit'